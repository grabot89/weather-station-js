{{> menu active="users"}}

<section class="section">

  <table class="table is-fullwidth">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Password</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>
                {{firstName}}
            </td>
            <td>
                {{lastName}}
            </td>
            <td>
                {{email}}
            </td>
            <td>
                {{password}}
            </td>
            <td>
                <a href="/account/{{_id}}" class="button">
                    {{>icons/edit}}
                </a>
      </td>
        </tr>
        {{/each}}
    </tbody>
</table>
</section>