<form action="/dashboard/addstation" method="POST">
<div class="columns">
    <div class="field column is-one-third">
      <label class="label">Name</label>
      <div class="control">
        <input class="input" placeholder="Name" type="text" name="name">
      </div>
    </div>
    <div class="field column is-one-third">
      <label class="label">Latitude</label>
      <div class="control">
        <input class="input" placeholder="00.00" type="number" step=0.01 name="latitude">
      </div>
    </div>
    <div class="field column is-one-third">
      <label class="label">Longitude</label>
      <div class="control">
        <input class="input" placeholder="00.00" type="number" step=0.01 name="longitude">
      </div>
    </div>
  </div>
<button class="button is-link">Add Station</button>
</form>